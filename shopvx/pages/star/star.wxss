.container {
  max-width: 700rpx;
  margin: 0 auto;
  padding: 20rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
}

.header {
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.star-items {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  margin: -10rpx; /* 负外边距将商品栏与购物车外框之间的间距缩小 */
}

.star-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
  position: relative;
  width:600rpx; 
  height: 200rpx;
}

.star-item-info {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.delete-cart-item{
  margin-block-end: 10rpx;
  padding-left:30rpx
}

.delete-cart-btn{
  background-color: rgb(247, 76, 76);
  font-size: small;
  color: white;
}

.store-name {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  font-size: 24rpx;
  color: #666666;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.product-details {
  flex: 1;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 28rpx;
  color: #666666;
}

.quantity {
  font-size: 28rpx;
  color: #666666;
}

.checkout-button {
  display: block;
  width: 100%;
  padding: 20rpx;
  background-color: #ff5a5f;
  color: #ffffff;
  text-align: center;
  text-decoration: none;
  font-weight: bold;
  margin-top: 40rpx;
  border-radius: 5rpx;
  font-size: 32rpx;
}
