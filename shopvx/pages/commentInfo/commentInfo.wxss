
.comment-section {
  padding: 20rpx;
  margin: 0 75rpx;
  border: 1px solid #dddddd;
  border-radius: 8rpx;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.comment-title {
  font-size: 16px;
  font-weight: bold;
}

.comment-count {
  font-size: 14px;
  color: #999999;
}

.comment-list {
  margin-bottom: 20rpx;
}

.comment-item {
  display: flex;
  align-items: flex-start;
  padding: 10rpx;
  border-bottom: 1px solid #eeeeee;
}

.avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.comment-content {
  margin-left: 10rpx;
  flex: 1;
}

.comment-info {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 4rpx;
}

.comment-username {
  font-size: 14px;
  font-weight: bold;
}

.comment-time {
  font-size: 12px;
  color: #999999;
}

.comment-text {
  font-size: 12px;
  color: #666666;
}

.comment-input {
  margin-bottom: 10rpx;
}

.textarea-container {
  width: 100%;
}

.textarea-box {
  width: 96%;
  height: 80rpx;
  padding: 10rpx;
  
  border: 1px solid #eeeeee;
  border-radius: 4rpx;
  resize: none;
}

.submit-button-container {
  display: flex;
  justify-content: flex-end;
}

.submit-button {
  padding: 10rpx 16rpx;
  background-color: #7db14b;
  color: #ffffff;
  border-radius: 4rpx;
}

.comment-list::after {
  content: "";
  display: table;
  clear: both;
}
