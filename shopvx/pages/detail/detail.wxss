.container {
  max-width: 600rpx;
  margin: 0 auto;
  padding: 20rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
}

.header {
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.info-item-father {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  margin: -10rpx;
  /* 负外边距将商品栏与购物车外框之间的间距缩小 */
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
  position: relative;
}

.input-count {
  width: 50rpx;
  margin-right: 20rpx;
  border-bottom: 3rpx solid #ddd;
  background-color: #ffffff;
  color: #000000;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 28rpx;
  color: #666666;
}

.quantity {
  font-size: 28rpx;
  color: #666666;
}

.add-star-button {
  width: 100%;
  padding: 20rpx;
  background-color: #ff5a5f;
  color: #ffffff;
  text-align: center;
  text-decoration: none;
  font-weight: bold;
  margin-top: 40rpx;
  border-radius: 5rpx;
  font-size: 32rpx;
}

.add-cart-button {
  width: 100%;
  padding: 20rpx;
  background-color: #ff5a5f;
  color: #ffffff;
  text-align: center;
  text-decoration: none;
  font-weight: bold;
  margin-top: 40rpx;
  border-radius: 5rpx;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}
.little-icon{
  width: 50rpx;
  height: 50rpx;
  padding-right: 10rpx;
  padding-right: 10rpx;
}


.comment-section {
  padding: 20rpx;
  margin: 0 75rpx;
  border: 1px solid #dddddd;
  border-radius: 8rpx;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.comment-title {
  font-size: 16px;
  font-weight: bold;
}

.comment-count {
  font-size: 14px;
  color: #999999;
}

.comment-list {
  margin-bottom: 20rpx;
}

.comment-item {
  display: flex;
  align-items: flex-start;
  padding: 10rpx;
  border-bottom: 1px solid #eeeeee;
}

.avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.comment-content {
  margin-left: 10rpx;
  flex: 1;
}

.comment-info {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 4rpx;
}

.comment-username {
  font-size: 14px;
  font-weight: bold;
}

.comment-time {
  font-size: 12px;
  color: #999999;
}

.comment-text {
  font-size: 12px;
  color: #666666;
}

.comment-input {
  margin-bottom: 10rpx;
}

.textarea-container {
  width: 100%;
}

.textarea-box {
  width: 96%;
  height: 80rpx;
  padding: 10rpx;
  
  border: 1px solid #eeeeee;
  border-radius: 4rpx;
  resize: none;
}

.submit-button-container {
  display: flex;
  justify-content: flex-end;
}

.submit-button {
  padding: 10rpx 16rpx;
  background-color: #7db14b;
  color: #ffffff;
  border-radius: 4rpx;
}

.comment-list::after {
  content: "";
  display: table;
  clear: both;
}
